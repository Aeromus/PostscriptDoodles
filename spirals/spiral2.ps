%Formulas
%Desmos.com Good for testing
% X = ((a-b) * cos(t)) + d(cos(((a-b)*t)/b))
%
% Y = ((a-b) * sin(t)) - d(sin(((a-b)*t)/b))


/inch {72 mul} def

%Basic Hypotrochoid Equations
/spiral{

	/a exch def
	/b exch def
	/d exch def
	/t exch def

	% X
	% X = ((a-b) * cos(t)) + d(cos(((a-b)*t)/b))

	b a sub t cos mul

	d b a sub b exch div t mul cos mul add
	
	%Y
	% Y = ((a-b) * sin(t)) - d(sin(((a-b)*t)/b))
	b a sub t sin mul

	d b a sub b exch div t mul sin mul add

} def

%Center-ish the image on the canvas
4.25 inch 5.5 inch translate


%Outer / Backmost spiral
0 15 720
{
	1 1 360
	{
		newpath
		0 0 moveto
		dup
		%Coloring
		dup 120 div exch 360 div exch 120
		setrgbcolor

		50 150 300
		spiral lineto
		stroke

	}for
	rotate
}for

