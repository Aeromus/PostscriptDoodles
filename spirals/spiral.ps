%Formulas

% X = ((a-b) * cos(t)) + d(cos(((a-b)*t)/b))
%
% Y = ((a-b) * sin(t)) - d(sin(((a-b)*t)/b))


/inch {72 mul} def


%Basic Hypotrochoid Equations
/spiral{

	/a exch def
	/b exch def
	/d exch def
	/t exch def

	%X
	b a sub t cos mul
%	d a b exch sub b exch div t mul cos mul add

	d b a sub b exch div t mul cos mul add

%	a b exch sub t cos mul

	
	%Y
	b a sub t sin mul

	d b a sub b exch div t mul sin mul add

	%a b exch sub t sin mul
	%d a b exch sub b exch div t mul sin mul add 

} def

%Center-ish the image on the canvas
4.25 inch 5.5 inch translate

%Background Blue Spiral wiht big petals
0 15 720
{
	1 1 360
	{
		newpath
		0 0 moveto
		dup
		%Coloring
		dup 520 div exch 360 div exch 120
		setrgbcolor

		80 130 265
		spiral lineto
		stroke

	}for
	rotate
}for

%Middle Orange and Black spiral
0 30 720
{
	1 1 360
	{
		newpath
		0 0 moveto
		dup
		%Coloring
		dup 720 div exch 270 div exch 0
		setrgbcolor

		55 80 133
		spiral lineto
		stroke

	}for
	rotate
}for

%Middle Green Spiral
0 30 720
{
	1 1 360
	{
		newpath
		0 0 moveto
		dup
		%Coloring
		dup 270 div exch 720 div exch 0
		setrgbcolor

		20 40 70
		spiral lineto
		stroke

	}for
	rotate
}for

showpage
